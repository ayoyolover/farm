
video {
	width: 100%;
}
.button-container {
	display: flex;
	justify-content: center;
	margin-bottom: 30rpx;
	/* 水平居中 */
}
.container {
	padding: 10px;
}
.grid {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.grid-item {
	width: 30%;
	/* 四列布局 */
	margin-bottom: 10px;
	position: relative;
}
.grid-image {
	width: 100%;
	height: 100px;
	/* 设置图片高度 */
	border-radius: 8px;
	/* 圆角 */
}
.grid-label {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgba(0, 0, 0, 0.5);
	color: white;
	text-align: center;
	padding: 5px 0;
	border-radius: 0 0 8px 8px;
	/* 圆角 */
}

