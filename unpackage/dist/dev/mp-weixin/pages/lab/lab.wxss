@-webkit-keyframes gradientBackground {
0% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
25% {
		background: linear-gradient(135deg, #80deea, #4dd0e1);
}
50% {
		background: linear-gradient(135deg, #26c6da, #00bcd4);
}
75% {
		background: linear-gradient(135deg, #80deea, #4dd0e1);
}
100% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
}
@keyframes gradientBackground {
0% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
25% {
		background: linear-gradient(135deg, #80deea, #4dd0e1);
}
50% {
		background: linear-gradient(135deg, #26c6da, #00bcd4);
}
75% {
		background: linear-gradient(135deg, #80deea, #4dd0e1);
}
100% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
}
.content {
	-webkit-animation: gradientBackground 15s ease infinite;
	        animation: gradientBackground 15s ease infinite;
	padding: 20rpx;
	min-height: 100vh;
}
.experiment-list {
	display: flex;
	flex-direction: column;
	padding: 20rpx;
}
.experiment-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 30rpx;
	padding: 20rpx;
	background-color: rgba(255, 255, 255, 0.8);
	/* 半透明背景 */
	border-radius: 20rpx;
	box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	/* 毛玻璃效果 */
	transition: box-shadow 0.3s ease, -webkit-transform 0.3s ease;
	transition: transform 0.3s ease, box-shadow 0.3s ease;
	transition: transform 0.3s ease, box-shadow 0.3s ease, -webkit-transform 0.3s ease;
}
.experiment-item:hover {
	-webkit-transform: translateY(-10rpx);
	        transform: translateY(-10rpx);
	box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.3);
}
.experiment-image {
	width: 100%;
	height: 300rpx;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	object-fit: cover;
}
.experiment-name {
	font-size: 32rpx;
	font-weight: bold;
	color: #10B078;
	text-align: center;
}

