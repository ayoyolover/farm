@-webkit-keyframes gradientBackground {
0% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
50% {
		background: linear-gradient(135deg, #b2ebf2, #80deea);
}
100% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
}
@keyframes gradientBackground {
0% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
50% {
		background: linear-gradient(135deg, #b2ebf2, #80deea);
}
100% {
		background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
}
}
.container {
	-webkit-animation: gradientBackground 20s ease infinite;
	        animation: gradientBackground 20s ease infinite;
	/* 背景色动态变化，速度变慢 */
	min-height: 100vh;
	padding: 20rpx;
}
.video {
	width: 100%;
	height: 240px;
	object-fit: cover;
}
.video-container {
	width: 100%;
}
.change {
	display: flex;
	justify-content: space-around;
	margin-top: 40rpx;
	margin-bottom: 40rpx;
}
.changeItem {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 40rpx;
	background-color: rgba(255, 255, 255, 0.8);
	/* 半透明背景 */
	border-radius: 20rpx;
	box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
	transition: box-shadow 0.3s ease, -webkit-transform 0.3s ease;
	transition: transform 0.3s ease, box-shadow 0.3s ease;
	transition: transform 0.3s ease, box-shadow 0.3s ease, -webkit-transform 0.3s ease;
}
.changeItem:hover {
	-webkit-transform: translateY(-10rpx);
	        transform: translateY(-10rpx);
	box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}
.icon {
	width: 80rpx;
	height: 80rpx;
	margin-bottom: 20rpx;
}
.text {
	font-size: 28rpx;
	font-weight: bold;
	color: #10B078;
	text-align: center;
}
.chart-container {
	margin-top: 40rpx;
}
.charts-box {
	margin-bottom: 20rpx;
	width: 100%;
	height: 300px;
	/* 适当调整高度 */
	background-color: #f9f9f9;
	/* 背景颜色使图表更清晰 */
	border-radius: 10px;
	/* 圆角 */
	box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
	/* 添加阴影，使图表更立体 */
}

